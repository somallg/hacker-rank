{
  "$schema": "http://json-schema.org/schema",
  "id": "MyFullSchematicsSchema",
  "title": "My Full Schematics Schema",
  "type": "object",
  "properties": {
    "directory": {
      "description": "The path to create problem files.",
      "type": "string",
      "default": "packages/cracking-the-coding-interview",
      "format": "path",
      "alias": "d",
      "x-prompt": "Enter directory path"
    },
    "problem": {
      "description": "The name of the problem.",
      "type": "string",
      "default": "problem",
      "alias": "p",
      "x-prompt": "Enter problem name"
    },
    "lang": {
      "description": "Specifes the programming language.",
      "type": "string",
      "default": "typescript",
      "alias": "l"
    }
  },
  "required": [
    "directory", "problem"
  ]
}
