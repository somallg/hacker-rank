{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "inlineSourceMap": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "@challenges/*": ["packages/*"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "webpack",
    "jest",
    "**/__problem@dasherize__.spec.ts",
    "**/__problem@dasherize__.ts"
  ]
}
