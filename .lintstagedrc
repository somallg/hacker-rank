{
  "linters": {
    "*.json": ["prettier --parser json --write", "git add"],
    "*.*rc": ["prettier --parser json --write", "git add"],
    "*.js": ["prettier --write", "git add"],
    "*.ts": [
      "prettier --write",
      "tslint --fix --format verbose",
      "yarn jest --findRelatedTests",
      "git add"
    ]
  },
  "concurrent": false,
  "renderer": "verbose"
}
